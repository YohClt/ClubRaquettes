<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <display-name>Club Raquettes</display-name>
         <description>Projet JEE nsy135 idf212944</description>
         
         <welcome-file-list> 
			<welcome-file>index.jsp</welcome-file> 
		</welcome-file-list>

         <servlet>
         	<servlet-name>Default</servlet-name>
         	<servlet-class>fr.clubraquettes.Controller.Default.DefaultController</servlet-class>
         	<load-on-startup>1</load-on-startup>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Default</servlet-name>
         	<url-pattern>/</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>Administrateur</servlet-name>
         	<servlet-class>fr.clubraquettes.Controller.Proprietaire.ProprietaireController</servlet-class>
         	<load-on-startup>1</load-on-startup>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Administrateur</servlet-name>
         	<url-pattern>/club/*</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>Adherent</servlet-name>
         	<servlet-class>fr.clubraquettes.Controller.Adherent.AdherentController</servlet-class>
         	<load-on-startup>1</load-on-startup>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Adherent</servlet-name>
         	<url-pattern>/adherent/*</url-pattern>
         </servlet-mapping>
         
</web-app>